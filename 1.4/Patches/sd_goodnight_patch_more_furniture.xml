<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!--================================ patches for mod more furniture ======================================-->
  <!--========================= adding facilities =============================-->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>More Furniture</li>
    </mods>
    <match Class="PatchOperationAdd">
      <xpath>/Defs/ThingDef[defName = "sd_basebed"]/comps/li[@Class = "CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
      <value>
        <li>Anon2Dresser</li>
        <li>Anon2EndTable</li>
        <li>Anon2EndTableLight</li>
        <li>Anon2RoyalEndTable</li>
        <li>Anon2RoyalEndTableLight</li>
      </value>
    </match>
  </Operation>
</Patch>