<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>[JPT] Soft Warm Beds</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[@ParentName = "SDGoodnightBedBase"]/inspectorTabs</xpath>
          <value>
            <li>SoftWarmBeds.ITab_Bedding</li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[@ParentName = "SDGoodnightBedBase"]/building</xpath>
          <value>
            <fixedStorageSettings>
              <filter>
                <categories>
                  <li>Textiles</li>
                </categories>
              </filter>
            </fixedStorageSettings>
            <defaultStorageSettings>
              <filter>
                <categories>
                  <li>Textiles</li>
                </categories>
              </filter>
            </defaultStorageSettings>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[@ParentName = "SDGoodnightBedBase"]</xpath>
          <value>
            <tickerType>Normal</tickerType>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName = "sd_medieval_single_bed" or defName = "sd_prison_single_bed_LB" or defName = "sd_prison_single_bed_RT" or defName = "sd_hammock_single" or defName = "sd_industrial_single_bed" or defName = "sd_space_single_bed" or defName = "sd_cryo_single_bed"]/comps</xpath>
          <value>
            <li Class="SoftWarmBeds.CompProperties_MakeableBed">
              <!--<blanketDef>SingleBlanket</blanketDef>-->
              <beddingDef>SingleBedding</beddingDef>
            </li>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName = "sd_*double*"]/comps</xpath>
          <value>
            <li Class="SoftWarmBeds.CompProperties_MakeableBed">
              <!--<blanketDef>SingleBlanket</blanketDef>-->
              <beddingDef>DoubleBedding</beddingDef>
            </li>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[@ParentName = "SDGoodnightBedBase"]/statBases/BedRestEffectiveness</xpath>
          <value>
            <BedRestEffectiveness>0.7</BedRestEffectiveness>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[@ParentName = "SDGoodnightBedBase"]/statBases/Comfort</xpath>
          <value>
            <Comfort>0.3</Comfort>
          </value>
        </li>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[@ParentName = "SDGoodnightBedBase"]/statBases</xpath>
          <value>
            <BedStuffEffectMultiplierInsulation_Cold>0.5</BedStuffEffectMultiplierInsulation_Cold>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>